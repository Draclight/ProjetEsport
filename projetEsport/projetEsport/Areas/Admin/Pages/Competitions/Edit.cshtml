@page
@model projetEsport.Areas.Admin.Pages.Competitions.EditModel

@{
    ViewData["Title"] = "Edit";
    int compteurJeux = 0;
    int compteurEquipe = 0;
}

<h1>Edit</h1>

<h4>Competition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Competition.ID" />
            <div class="form-group">
                <label asp-for="Competition.Nom" class="control-label"></label>
                <input asp-for="Competition.Nom" class="form-control" />
                <span asp-validation-for="Competition.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Competition.DateDebut" class="control-label"></label>
                <input asp-for="Competition.DateDebut" class="form-control" />
                <span asp-validation-for="Competition.DateDebut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Competition.DateFin" class="control-label"></label>
                <input asp-for="Competition.DateFin" class="form-control" />
                <span asp-validation-for="Competition.DateFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Competition.CreeLe" class="control-label"></label>
                <input asp-for="Competition.CreeLe" class="form-control" />
                <span asp-validation-for="Competition.CreeLe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Competition.ModifieeLe" class="control-label"></label>
                <input asp-for="Competition.ModifieeLe" class="form-control" />
                <span asp-validation-for="Competition.ModifieeLe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Competition.TypeCompetitionID" class="control-label"></label>
                <select asp-for="Competition.TypeCompetitionID" class="form-control" asp-items="ViewBag.TypeCompetitionID"></select>
                <span asp-validation-for="Competition.TypeCompetitionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Competition.ProprietaireID" class="control-label"></label>
                <select asp-for="Competition.ProprietaireID" class="form-control" asp-items="ViewBag.ProprietaireID"></select>
                <span asp-validation-for="Competition.ProprietaireID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <h4>@Html.DisplayNameFor(model => model.Competition.JeuxDeLaCompetition)</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Competition.JeuxDeLaCompetition[0].Nom)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var jeu in Model.Competition.JeuxDeLaCompetition)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => jeu.Nom)
                        </td>
                        <td>
                            <form method="post">
                                <input type="hidden" asp-for="@jeu.ID" name="jeu.ID" />
                                <input type="hidden" asp-for="@jeu.JeuID" name="jeu.JeuID" />
                                <input type="hidden" asp-for="@jeu.CompetitionID" name="jeu.CompetitionID" />
                                @if (jeu.IsInCompetition)
                                {
                                    <input type="submit" class="btn btn-danger" asp-page-handler="RemoveJeu" value="Supprimer" />
                                }
                                else
                                {
                                    <input type="submit" class="btn btn-success" asp-page-handler="AddJeu" value="Ajouter" />
                                }
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <h4>@Html.DisplayNameFor(model => model.Competition.EquipesDeLaCompetition)</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Competition.EquipesDeLaCompetition[0].Nom)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var equipe in Model.Competition.EquipesDeLaCompetition)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => equipe.Nom)
                        </td>
                        <td>
                            <form method="post">
                                <input type="hidden" asp-for="@equipe.ID" name="equipe.ID" />
                                <input type="hidden" asp-for="@equipe.EquipeID" name="equipe.EquipeID" />
                                <input type="hidden" asp-for="@equipe.CompetitionID" name="equipe.CompetitionID" />
                                @if (equipe.IsInCompetition)
                                {
                                    <input type="submit" class="btn btn-danger" asp-page-handler="RemoveEquipe" value="Supprimer" />
                                }
                                else
                                {
                                    <input type="submit" class="btn btn-success" asp-page-handler="AddEquipe" value="Ajouter" />
                                }
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
