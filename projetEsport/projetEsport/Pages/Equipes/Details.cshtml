@page
@model projetEsport.Pages.Equipes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Equipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipe.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipe.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipe.Jeu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipe.Jeu.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipe.Membres)
        </dt>
        <dd class="col-sm-5">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Equipe.Membres.FirstOrDefault().Pseudo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Equipe.Membres.FirstOrDefault().CreateurEquipe)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var membre in Model.Equipe.Membres)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => membre.Pseudo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => membre.CreateurEquipe)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    @if (Model.EquipeVM.IsProprietaire)
    {

        <a class="btn btn-success" asp-page="./Edit" asp-route-id="@Model.Equipe.ID">Edit</a> @string.Format("|")

    }
    <a asp-page="./Index">Back to List</a>
</div>
