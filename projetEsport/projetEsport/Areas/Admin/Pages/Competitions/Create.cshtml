@page
@model projetEsport.Areas.Admin.Pages.Competitions.CreateModel

@{
    ViewData["Title"] = "Create";
    int compteurJeux = 0;
    int compteurEquipe = 0;
}

<h1>Create</h1>

<h4>Competition</h4>
<hr />

<form method="post">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CompetitionVM.Nom" class="control-label"></label>
            <input asp-for="CompetitionVM.Nom" class="form-control" />
            <span asp-validation-for="CompetitionVM.Nom" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CompetitionVM.DateDebut" class="control-label"></label>
            <input asp-for="CompetitionVM.DateDebut" class="form-control" />
            <span asp-validation-for="CompetitionVM.DateDebut" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CompetitionVM.DateFin" class="control-label"></label>
            <input asp-for="CompetitionVM.DateFin" class="form-control" />
            <span asp-validation-for="Competition.DateFin" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CompetitionVM.CreeLe" class="control-label"></label>
            <input asp-for="CompetitionVM.CreeLe" class="form-control" />
            <span asp-validation-for="Competition.CreeLe" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CompetitionVM.ModifieeLe" class="control-label"></label>
            <input asp-for="CompetitionVM.ModifieeLe" class="form-control" />
            <span asp-validation-for="Competition.ModifieeLe" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CompetitionVM.TypeCompetitionID" class="control-label"></label>
            <select asp-for="CompetitionVM.TypeCompetitionID" class="form-control" asp-items="ViewBag.TypeCompetitionID"></select>
        </div>
        <div class="form-group">
            <label asp-for="CompetitionVM.ProprietaireID" class="control-label"></label>
            <select asp-for="CompetitionVM.ProprietaireID" class="form-control" asp-items="ViewBag.ProprietaireID"></select>
        </div>
        <div class="form-group">
            <h2>Jeux</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CompetitionVM.JeuxDeLaCompetition[0].Nom)
                        </th>
                        <th>@Html.DisplayNameFor(model => model.CompetitionVM.JeuxDeLaCompetition[0].IsInCompetition)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var jeu in Model.CompetitionVM.JeuxDeLaCompetition)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => jeu.Nom)
                            </td>
                            <td>
                                <input class="form-check-input" asp-for="@jeu.IsInCompetition" name="CompetitionVM.JeuxDeLaCompetition[@compteurJeux].IsInCompetition" />
                                <input type="hidden" asp-for="@jeu.ID" name="CompetitionVM.JeuxDeLaCompetition[@compteurJeux].ID" />
                            </td>
                        </tr>
                        compteurJeux++;
                    }
                </tbody>
            </table>
        </div>
        <div class="form-group">
            <h2>Equipes</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CompetitionVM.EquipesDeLaCompetition[0].Nom)
                        </th>
                        <th>@Html.DisplayNameFor(model => model.CompetitionVM.EquipesDeLaCompetition[0].IsInCompetition)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var equipe in Model.CompetitionVM.EquipesDeLaCompetition)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => equipe.Nom)
                            </td>
                            <td>
                                <input class="form-check-input" asp-for="@equipe.IsInCompetition" name="CompetitionVM.EquipesDeLaCompetition[@compteurEquipe].IsInCompetition" />
                                <input type="hidden" asp-for="@equipe.ID" name="CompetitionVM.EquipesDeLaCompetition[@compteurEquipe].ID" />
                            </td>
                        </tr>
                        compteurEquipe++;
                    }
                </tbody>
            </table>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
