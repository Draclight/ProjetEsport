@page
@model projetEsport.Pages.Equipes.DeleteModel

@{
    ViewData["Title"] = "Suppression";
}

<h1>Suppression</h1>

<h3>Souhaitez-vous vraiment supprimer cette équipe ?</h3>
<div>
    <h4>Equipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipe.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipe.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipe.CreeLe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipe.CreeLe)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipe.Jeu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipe.Jeu.Nom)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Equipe.ID" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-page="./Index">Retour</a>
    </form>
</div>
