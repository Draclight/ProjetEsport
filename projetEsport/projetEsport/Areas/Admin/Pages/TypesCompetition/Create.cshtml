@page
@model projetEsport.Areas.Admin.Pages.TypesCompetition.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Création</h1>

<h4>Nouveau type de compétition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TypeCompetition.Nom" class="control-label"></label>
                <input asp-for="TypeCompetition.Nom" class="form-control" />
                <span asp-validation-for="TypeCompetition.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Retour à l'accueil</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
