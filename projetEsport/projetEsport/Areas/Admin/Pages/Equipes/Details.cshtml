@page
@model projetEsport.Areas.Admin.Pages.Equipes.DetailsModel

@{
    ViewData["Title"] = "Détails";
}

<h1>Détails</h1>

<div>
    <h4>Équipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipe.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipe.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipe.CreeLe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipe.CreeLe)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipe.ModifieeLe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipe.ModifieeLe)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipe.Membres)
        </dt>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Equipe.Membres.FirstOrDefault().Pseudo)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Equipe.Membres)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Pseudo)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-success" asp-page="./Edit" asp-route-id="@Model.Equipe.ID">Éditer</a> |
    <a asp-page="./Index">Retour</a>
</div>
