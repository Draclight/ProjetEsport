<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>projetEsport - Admin | @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="Admin" asp-page="/Index">projetEsport</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropbtn" asp-area="Admin" asp-page="/Competitions/Index"><span class="icon-competition"></span>Compétitions</a>
                            <ul class="dropdown-content">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-page="/TypesCompetition/Index">Types de competition</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropbtn" asp-area="Admin" asp-page="/Equipes/Index"><span class="icon-equipe"></span>Equipes</a>
                            <ul class="dropdown-content">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-page="/Equipes/Demandes">Demandes</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark dropbtn" asp-area="Admin" asp-page="/Jeux/Index"><span class="icon-jeu"></span>Jeux</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropbtn" asp-area="Admin" asp-page="/Licencies/Index"><span class="icon-licencie"></span>Licenciés</a>
                            <ul class="dropdown-content">
                                <li class="nav-item flex">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-page="/Users/ApproveUsers">Demandes</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - projetEsport - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
