@page
@model projetEsport.Pages.Equipes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Equipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EquipeViewModel.Equipe.Nom" class="control-label"></label>
                <input asp-for="EquipeViewModel.Equipe.Nom" class="form-control" />
                <span asp-validation-for="EquipeViewModel.Equipe.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.EquipeViewModel.Equipe.Nom)

                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EquipeViewModel.Licencies.FirstOrDefault().InviteDansEquipe)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.LicenciesViewModel.Count; i++)
                        {
                            <tr>
                                <td>
                                    <label class="form-control-plaintext">@Model.LicenciesViewModel[i].licencie.Pseudo</label>
                                </td>
                                <td>
                                    <input type="checkbox" asp-for="@Model.LicenciesViewModel[i].InviteDansEquipe" name="LicenciesViewModel[@i].InviteDansEquipe" class="form-control" />
                                </td>
                                <td>
                                    <input type="hidden" asp-for="EquipeViewModel.LicencieID" name="EquipeViewModel.LicencieID" class="form-control" />
                                    <input type="hidden" asp-for="@Model.LicenciesViewModel[i].licencie.ID" name="LicenciesViewModel[@i].licencie.ID" class="form-control" />
                                    <input type="hidden" asp-for="@Model.LicenciesViewModel[i].InviteDansEquipe" name="LicenciesViewModel[@i].InviteDansEquipe" class="form-control" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
