@page
@model projetEsport.Areas.Admin.Pages.Jeux.IndexModel

@{
    ViewData["Title"] = "Jeux";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-success" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Jeu[0].Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jeu[0].CreeLe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jeu[0].ModifieeLe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Jeu)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreeLe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifieeLe)
                </td>
                <td>
                    <a class="btn btn-success" asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
